@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4"><br><br>Welcome to your Task manager portal</h1>
    <h3> <br><br>Click below to login <br></h3>
    <button id="btnLogin" type="button" style="background-color: maroon;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    border-radius: 10px;
    width: 200px;
    height: 50px;"> Login
    </button>

    <script>
        var button = document.getElementById("btnLogin");

        button.addEventListener("click", function () {
            window.location.href = "/LoginRegs/Create";
        });
    </script>

    <br />
    <h3> <br><br>Click below to Register for an Account <br></h3>
    <button id="btnRegister" type="button" style="background-color: maroon;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    border-radius: 10px;
    width: 200px;
    height: 50px;">
        Register
    </button>

    <script>
        var button = document.getElementById("btnRegister");

        button.addEventListener("click", function () {
            window.location.href = "/LoginRegs/CreateReg";
        });
    </script>

</div>
