@model IceTaskOne_CLVDA.Models.Login.LoginReg
@{
    ViewData["Title"] = "Registration";
}

<h1>Register</h1>
<br />
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="tempUser" class="control-label"></label>
                <input asp-for="tempUser" class="form-control" />
                <span asp-validation-for="tempUser" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TempPass" class="control-label"></label>
                <input asp-for="TempPass" class="form-control" />
                <span asp-validation-for="TempPass" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="TempConfPass" class="control-label"></label>
                <input asp-for="TempConfPass" class="form-control" />
                <span asp-validation-for="TempConfPass" class="text-danger"></span>
            </div>
            <br /> <br />
            <div class="form-group">
                <input type="submit" value="Register" class="btn btn-primary" style="background-color: maroon;
    border: none;
    color: white;
    padding: 15px 32px;
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    border-radius: 10px;
    width: 200px;
    height: 50px;">
            </div>
        </form>
    </div>
</div>