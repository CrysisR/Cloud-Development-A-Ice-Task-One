@model IceTaskOne_CLVDA.Models.Tasks.Tasks

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete task?</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.taskName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.taskName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.taskState)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.taskState)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.taskGiver)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.taskGiver)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TaskDueDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TaskDueDate)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="taskId" />
        <input type="submit" value="Delete" class="btn btn-danger" style="background-color: maroon;
                border: none;
                color: white;
                    padding: 15px 32px;
                    text-align: center;
                    font-size: 16px;
                    font-weight: bold;
                    border-radius: 10px;
                    width: 150px;
                    height: 50px;" />
        <br /> <br />
        <a asp-action="Index" style="color:maroon">Back to task list</a>
    </form>
</div>
